<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">


<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="200dp"
    tools:context=".MainActivity"
    tools:ignore="ExtraText">


    <TextView
        android:id="@+id/valores"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="35sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.216"
        tools:text="VALORES" />

    <TextView
        android:id="@+id/resultado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="50sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/valores"
        app:layout_constraintVertical_bias="0.188"
        tools:text="RESULTADO" />

</androidx.constraintlayout.widget.ConstraintLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TableRow>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/ce"
                android:text="CE"
                android:background="@drawable/background_button"
                android:textColor="@color/white"
                android:layout_margin="2dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="100dp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/divisao"
                android:text="/"
                android:background="@drawable/background_button"
                android:textColor="@color/white"
                android:layout_margin="2dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="100dp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/multiplicacao"
                android:text="*"
                android:background="@drawable/background_button"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:layout_margin="2dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="100dp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/subtracao"
                android:text="-"
                android:background="@drawable/background_button"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:layout_margin="2dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="100dp"/>
        </TableRow>
        <TableRow>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/num7"
                android:text="7"
                android:background="@drawable/backgroud_buttonsnums"
                android:textColor="@color/white"
                android:layout_margin="2dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="100dp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/num8"
                android:text="8"
                android:background="@drawable/backgroud_buttonsnums"
                android:textColor="@color/white"
                android:layout_margin="2dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="100dp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/num9"
                android:text="9"
                android:background="@drawable/backgroud_buttonsnums"
                android:textColor="@color/white"
                android:layout_margin="2dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="100dp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/soma"
                android:text="+"
                android:background="@drawable/background_button"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:layout_margin="2dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="100dp"/>
        </TableRow>
        <TableRow>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/num4"
                android:text="4"
                android:background="@drawable/backgroud_buttonsnums"
                android:textColor="@color/white"
                android:layout_margin="2dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="100dp"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/num5"
                android:text="5"
                android:background="@drawable/backgroud_buttonsnums"
                android:textColor="@color/white"
                android:layout_margin="2dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="100dp"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/num6"
                android:text="6"
                android:background="@drawable/backgroud_buttonsnums"
                android:textColor="@color/white"
                android:layout_margin="2dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="100dp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/ponto"
                android:text="."
                android:background="@drawable/background_button"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:layout_margin="2dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="100dp"/>
        </TableRow>
        <TableRow>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/num1"
                android:text="1"
                android:background="@drawable/backgroud_buttonsnums"
                android:textColor="@color/white"
                android:layout_margin="2dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="100dp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/num2"
                android:text="2"
                android:background="@drawable/backgroud_buttonsnums"
                android:textColor="@color/white"
                android:layout_margin="2dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="100dp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/num3"
                android:text="3"
                android:background="@drawable/backgroud_buttonsnums"
                android:textColor="@color/white"
                android:layout_margin="2dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="100dp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/Limpar"
                android:text="LIMPAR"
                android:background="@drawable/background_button"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:layout_margin="2dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="100dp"/>
        </TableRow>

        <TableRow>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/num0"
                android:text="0"
                android:background="@drawable/background_button0"
                android:textColor="@color/black"
                android:textSize="100px"
                android:layout_margin="2dp"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="100dp"/>



            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/igual"
                android:text="="
                android:background="@drawable/background_button0"
                android:textColor="@color/black"
                android:textSize="40dp"
                android:layout_margin="2dp"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="100dp"/>

        </TableRow>


    </TableLayout>


</LinearLayout>